#ifndef PMERGE_HPP
#define PMERGE_HPP

#include <string>
#include <vector>
#include <list>

class PMerge {
private:
  PMerge(void);
  PMerge(const PMerge &other);
  PMerge &operator=(const PMerge &other);
  ~PMerge(void);
  static void sortVector(std::vector<unsigned int> vec);
  static void sortList(std::list<unsigned int> list);
public:
  static void startPMerge(const std::string &other, 1);
};
#endif
